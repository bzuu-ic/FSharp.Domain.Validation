<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<Version>0.9.78-rc2</Version>
		<Authors>Luis Ferrao</Authors>
		<Company>Luis Ferrao</Company>
		<Product>FSharp.Domain.Validation</Product>
		<Description>This package only contains abstractions and shouldn't be referenced by your projects in most cases</Description>
		<Copyright>Copyright Â© 2021 Luis Ferrao</Copyright>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/lfr/FSharp.Domain.Validation</PackageProjectUrl>
		<PackageIcon>square.png</PackageIcon>
		<PackageTags>validation blocks fsharp ddd domain</PackageTags>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
	  <OutputPath>..\.package-bin\</OutputPath>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="Utils.fs" />
		<Compile Include="IBox.fs" />
		<Compile Include="AssemblyInfo.fs" />
	</ItemGroup>

	<!-- Requred for Fable -->
	<ItemGroup>
		<Content Include="*.fsproj; **\*.fs; **\*.fsi" Visible="false">
			<PackagePath>.\fable\</PackagePath>
		</Content>
		<Compile Include="_deprecated.fs" />
		<Content Remove="obj\**" />
		<EmbeddedResource Remove="obj\**" />
	</ItemGroup>
	<ItemGroup>
	  <Content Remove="_deprecated.fs" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\logo\square.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

</Project>
